<h2>ブログ一覧</h2>

<p><%= notice %></p>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>ブログ詳細</th>
    <th>ブログ編集</th>
  </tr>
  <% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細へ', blog_path(blog.id) %></td>
    <td><%= link_to '編集へ', edit_blog_path(blog.id) %></td>
    <td><%= link_to 'ブログ削除', blog_path(blog.id), method: :delete, data: { confirm: '本当に削除しますか？'} %></td>
  </tr>
  <% end %>
</table>

<%= link_to '新規ブログ作成はこちら', new_blog_path %>
